<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3>Move Item</h3>
</div>
<div class="modal-body">
	<div class="row-fluid">
		{{>../blocks/message}}
		<form action="{{controller_base_url}}move_item/{{content_data.purchase_id}}" method="post" class="form-horizontal" id="modal-form-add">
			<input type="hidden" value="{{content_data.purchase_id}}" name="purchase_id" id="purchase_id" />
			<div class="control-group {{#key_in_array errors "supplier_id"}}error{{/key_in_array}}">
				<label class="control-label" for="supplier_id">Select shelf</label>
				<div class="controls">
					<select name="shelf_id" id="shelf_id">
						{{#each content_data.shelfs}}
							<option value="{{supply_shelf_id}}">{{supply_shelf_name}}</option>
						{{/each}}
					</select>
					<span class="help-inline error">{{#get_first_error errors "supplier_id"}}</span>
				</div>
			</div>
			<div class="control-group {{#key_in_array errors "supply_purchased_quantity"}}error{{/key_in_array}}">
				<label class="control-label" for="quantinty">Move Quantity</label>
				<div class="controls">
					<input type="text" id="quantity" name="quantity" placeholder="" value="{{quantinty}}">
					<span class="help-inline error">{{#get_first_error errors "quantity"}}</span>
				</div>
			</div>
			<div class="control-group {{#key_in_array errors "move_description"}}error{{/key_in_array}}">
				<label class="control-label" for="move_description">Description</label>
				<div class="controls">
					<textarea name="move_description" id="move_description"></textarea>
				</div>
			</div>

			<input type="hidden" value={{#if ../save_failed}}"0"{{/if}}{{#unless ../save_failed}}"1"{{/unless}} name="saved" />
			<input type="hidden" value={{#if ../added_record}}"1"{{/if}}{{#unless ../added_record}}"0"{{/unless}} name="new_row" />
		</form>
	</div>
</div>
<div class="modal-footer">
	<button type="button" data-dismiss="modal" class="btn btn-small">Close</button>
	<button type="button" class="btn btn-primary btn-small submit-form" data-form="modal-form-add" data-row-data="supplyTableRowData">Save changes</button>
</div>

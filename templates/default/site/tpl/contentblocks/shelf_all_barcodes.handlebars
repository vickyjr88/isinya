
{{#if export_status}}

    <style>
		body {
			width: 8.5in;
			margin: 0in .1875in;
			margin-right:0px;
		}
		.label {
			width: 350px;
			margin-left:3px;
			float: left;
			border: 2px solid #000;
			text-align: center;
			overflow: hidden;

			margin:0 30px 25px 30px;

		}
		
		.label:nth-child(even){
			margin-left: 20px !important;
		}
				.page-break  {
			clear: left;
			display:block;
			page-break-after:always;
		}
		@page *{
			margin-top: 10px;
			margin-left: 20px
		}
		.label .ikanban-card{
			background-color: #fff !important; 
			color: #333 !important;
			border: 2px solid !important;
			padding:0px !important;
			width:250px;
			margin-right:15px;
		}
		.label .ikanban-header{
			background-color: #000;
			color:#fff;
			height:45px;
			font-weight:bolder;
			font-size:12px;
			text-transform:capitalize;
			
		}
		.shelf-title{
			text-transform: uppercase;
			padding-top: 10px;
			font-size: 16px;
		}
		.shelf-name{
			border-bottom: 2px solid #000;
			border-top: 2px solid #000;
			color:#000;
			background: #fff !important;
			height: 30px;
			padding-top:10px;
			font-weight: 1200;
			font-size: 20px;
			text-transform: capitalize;
		}
		.barcode-area{
			height:80px;
			
			padding-top: 5px;
		}
		.barcode-area img{
			padding-bottom:10px;
		}
		.shelf-name.product-name{
			border-top: none !important;

		}
		.ikanbarn-footer{
			height:30px !important; 
			color: #000;
			text-align: left;
		}
		.ikanbarn-footer .ikanban-footer-left{
			float:left; 
			padding: 2px 2%;
			width: 33%;
		}
		.ikanbarn-footer .ikanban-footer-right{
			float:right; 
			padding: 2px 2%;
			width: 56%;
			border-left: 2px solid #000;
		}
		.label .ikanban-header img{
			height:20px; 
			width: 30px;
			opacity: 100%;
			float:left;
		}
		
	</style>

	
	{{#iter shelf_supply_items}}
				<div class="label ikanban-card" style="text-align: center;">
			<div class="ikanban-header" style="">
				<img style="float:left;height:20px;width:30px;" 
					src="{{../component_base_url}}templates/default/site/images/ikanban-logo.png" />
				efficiency pro
				<div class="shelf-title">
					shelf kanban card
				</div>
			</div>
			<div class="shelf-name" style="font-size:17px;font-weight: bold;">
				Shelf : {{supply_shelf_name}}
			</div>
			<div class="barcode-area">
				<img height="70px" src="{{../barcode_url}}?code={{product_code}}" />
			</div>

			<div class="shelf-name product-name" style="font-size: 16px !important;
			font-weight: bold;" >
				Product: {{supply_name}}

			</div>
			<div class="ikanbarn-footer">
				<div class="ikanbarn-footer ikanban-footer-left" style="font-size:10px;">
					Lead Time: {{shelf_lead_time}} min<br/>
					Max: {{shelf_target_level}}
				</div>
				<div class="ikanbarn-footer ikanban-footer-right" style="font-size:10px;">
					Restock Location: {{shelf_restock_location}}<br/>
					Reorder: {{shelf_reorder_level}}
				</div>
			</div>
		</div>
		<div class="label-spacer"></div>
		
	{{/iter}}
	
{{else}}

        <div class="row-fluid">
        <div >
              
                <h3 style="text-aligin: center;">Shelf Kanban Cards</h3>
        </div>
        <div style="width: 900px;" >

                <a class="btn btn-mini btn-primary" href="{{controller_base_url}}all_ikanban_cards?format=avery_pdf" data-width="480">Export as PDF</a>
                <br clear="all"/>
                <br clear="all"/>
                {{#iter shelf_supply_items}}

                
                <div class="label ikanban-card" style="text-align: center;">
				  <div class="ikanban-header" style="">
				  <img src="{{component_base_url}}templates/default/site/images/ikanban-logo.png">
				    
				  efficiency pro
				      <div class="shelf-title">shelf kanban card</div>
				  </div>
				  <div class="shelf-name">Shelf : {{supply_shelf_name}}</div>
					
		
					<div class="barcode-area"><img src="{{../barcode_url}}?code={{product_code}}" /></div>
					<div class="shelf-name product-name">Product: {{supply_name}}</div>
					<div class="ikanbarn-footer">
						<div class="ikanbarn-footer ikanban-footer-left">
							Lead Time: {{shelf_lead_time}} min<br/>
							Max: {{shelf_target_level}}
						</div>
						<div class="ikanbarn-footer ikanban-footer-right">
							Restock Location: N/A<br/>
							Reorder: {{shelf_reorder_level}}
						</div>
					</div>
				</div>
				

                {{/iter}}
        
        </div>
{{/if}}
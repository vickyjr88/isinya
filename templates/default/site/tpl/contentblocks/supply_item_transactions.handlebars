<div class="span12">
	{{#if content_data}}
	<table id="supply-item-transaction" class="table table-striped table-bordered table-hover table-condensed data-table">
		<thead>
			<tr>
				<th class="center">#</th>
				<th>Type</th>
				<th class="hidden-480">Username</th>
				<th>Timestamp</th>
				<th>Quantity</th>
				<!-- <th class="hidden-480">Details</th> -->
				<th>&nbsp;</th>
			</tr>
		</thead>
		<tbody>
			{{#iter content_data}}
			<tr>
				<td class="center">{{@index}}</td>
				<td>{{name}}</td>
				<td class="hidden-480">{{personnel_name}}</td>
				<td>{{#format_date time "Y-m-d H:i:s"}}</td>
				<td>{{amount}}</td>
				<!-- <td class="hidden-480">{{details}}</td> -->
				<td>
					<div class="hidden-phone visible-desktop">
						<button class="btn btn-minier btn-info child-modal" title="Details" data-width="500" data-href="{{../controller_base_url}}transaction/{{id}}"><i class="icon-ellipsis-horizontal">more ...</i></button>
					</div>
				</td>
			</tr>
			{{/iter}}
		</tbody>
	</table>
	{{else}}
	<p>No transactions found.</p>
	{{/if}}
</div>
<script type="text/javascript">initDataTableAjax('#supply-item-transaction', [-1])</script>

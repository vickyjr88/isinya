<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3>Client Address Book</h3>
</div>
<div class="modal-body">
<table class="table table-striped table-bordered table-hover table-condensed data-table bpmTopnTail" id="supply_address">
	<thead>
		<tr>
			<th class="center">Id</th>
			<th> Name</th>
			<th>Contact Person</th>
			<th class="hidden-480">Telephone</th>
			<th class="hidden-480">Email Address</th>
			<th>Postal Addresss</th>
			
		</tr>
	</thead>
	<tbody>
		{{#each client}}
		<tr>
			<td><a class="child-modal" data-href="{{../controller_base_url}}edit/{{client_id}}">{{client_id}}</a></td>
			<td>{{client_name}}</td>
			<td>{{client_contact_person}}</td>
			<td class="hidden-480">{{client_telephone}}</td>
			<td class="hidden-480">{{client_email_address}}</td>
			<td>{{client_postal_address}}</td>
			
		</tr>
		{{/each}}
	</tbody>
</table>
</div>
<div class="modal-footer">
	<div class="row-fluid button-bar-bottom">
	<a type="button" href="{{controller_base_url}}clients_export_excel_address_book" class="btn btn-primary btn-small" >Export to Excel</a>
	<button type="button" data-dismiss="modal" class="btn btn-small">Close</button>
	<a href="{{current_url}}?format=pdf" class="btn btn-primary btn-small" ><i class="icon-print"></i> Export to PDF </a>
	</div>
</div>
<script type="text/javascript">
	window.mainDataTable = initDataTable('#supply_address', [-1]);

	$('table th input:checkbox').on('click', function() {
		var that = this;
		$(this).closest('table').find('tr > td:first-child input:checkbox').each(function() {
			this.checked = that.checked;
			$(this).closest('tr').toggleClass('selected');
		});
	});
</script>

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3>Personnel Address Book</h3>
</div>
<div class="modal-body">
<table class="table table-striped table-bordered table-hover table-condensed data-table bpmTopnTail" id="supply_address">
	<thead>
		<tr>
			<th class="center">Id</th>
			<th> Name</th>
			<th class="hidden-480">Telephone</th>
			<th class="hidden-480">Email Address</th>
			<th>Personnel status</th>
			
		</tr>
	</thead>
	<tbody>
		{{#each personnel}}
		<tr>
			<td><a class="child-modal" data-href="{{../controller_base_url}}edit/{{personnel_id}}">{{personnel_id}}</a></td>
			<td>{{personnel_name}}</td>
			<td class="hidden-480">{{personnel_telephone}}</td>
			<td class="hidden-480">{{personnel_email_address}}</td>
			<td><span id="list-item-status-{{personnel_id}}" class='label{{#if personnel_active}} label-success{{else}} label-warning{{/if}}' style="float:right">{{#if personnel_active}}Active{{else}}Inactive{{/if}}</span></td>
			
		</tr>
		{{/each}}
	</tbody>
</table>
</div>
<div class="modal-footer">
	<div class="button-bar-bottom">
	<!--<a type="button" href="{{controller_base_url}}personnel_export_excel_address_book" class="btn btn-primary btn-small" >Export to Excel</a>-->
	<button type="button" data-dismiss="modal" class="btn btn-small">Close</button>
	<a href="{{controller_base_url}}personnel_export_excel_address_book" class="btn btn-primary btn-small" ><i class="icon-save"></i> Export to Excel</a>
	<a href="{{current_url}}?format=pdf" class="btn btn-primary btn-small" ><i class="icon-print"></i> Export to PDF </a>
	</div>
</div>
<script type="text/javascript">
	window.mainDataTable = initDataTable('#supply_address', [-1]);

	$('table th input:checkbox').on('click', function() {
		var that = this;
		$(this).closest('table').find('tr > td:first-child input:checkbox').each(function() {
			this.checked = that.checked;
			$(this).closest('tr').toggleClass('selected');
		});
	});
</script>

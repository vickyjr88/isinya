<div class="span12" style="margin-left:-2px;">
	<div class="button-bar">
		<span class="buttons">
			<div class="btn-group">
				{{#user_can INVENTORY_VIEW}}
					<a data-toggle="dropdown" class="btn btn-primary btn-mini dropdown-toggle"> <i class="icon-file"></i> Reports <i class="icon-angle-down icon-on-right"></i> </a>
					<ul class="dropdown-menu pull-right dropdown-caret">
						<li>
							<a href="{{controller_base_url}}inventory_stock_levels" >Inventory Stock Levels</a>
						</li>
						<li>
							<a href="{{controller_base_url}}inventory_stock_by_category">Inventory Stock Levels by Category</a>
						</li>
						<li>
							<a href="{{controller_base_url}}inventory_stock_by_location">Inventory Stock Levels by Location</a>
						</li>
						<li>
							<a href="{{controller_base_url}}inventory_stock_by_supplier">Inventory Stock Levels by Supplier</a>
						</li>
						<li>
							<a href="{{controller_base_url}}inventory_reorder">Inventory Stock To Reorder</a>
						</li>
						<li>
							<a href="{{controller_base_url}}supplier_address_book">Supplier Address Book</a>
						</li>
						<li>
							<a href="{{controller_base_url}}pull_sheets">Pull Sheet Summary</a>
						</li>
					</ul>
				{{/user_can}}
			</div>
		</span>
	</div>
	<div class="row-fluid">
	<br clear="all"/>
	<table class="table table-striped table-bordered table-hover table-condensed pull-sheet-summary-data-table bpmTopnTail data-table" id="inventory_pull">
		<thead>
			<tr>
				<th class="center">Pull ID</th>
				<th>Date</th>
				<th>Item Code</th>
				<th>Item Name</th>
				<th>Allocating User</th>
				<th>Recipient User</th>
				<th>Amount</th>
				<th>Pull Report</th>
			</tr>
		</thead>
		<tbody>
			{{#each pulls}}
				<tr>
					<td>{{supply_allocation_id}}</td>
					<td>{{#format_date time "Y-m-d H:i:s"}}</td>
					<td><a class="ajax-modal" data-href="{{../controller_base_url}}edit/{{supply_id}}">{{product_code}}</a></td>
					<td>{{supply_name}}</td>
					<td>{{personnel_name}}</td>
					{{#if recipient_name}}
						<td>{{recipient_name}}</td>
					{{else}}
						<td>N/A</td>
					{{/if}}
					<td>{{quantity}}</td>
					<td><a class="btn btn-mini btn-info ajax-modal" data-href="{{../component_base_url}}/Supplies/transaction/{{id}}">Pull Report</a></td>
				</tr>
			{{/each}}
		</tbody>
	</table>
	</div>
	<div class="row-fluid button-bar-bottom">
		<!--<a  type="button" href="{{controller_base_url}}" class="btn btn-small"><i class="icon-undo"></i> Go Back to Supplies</a>-->
		<a type="button" href="{{controller_base_url}}supplier_export_excel_pull_sheet" class="btn btn-primary btn-small" ><i class="icon-save"></i> Export to Excel</a>
		<a href="{{current_url}}?format=pdf" class="btn btn-primary btn-small" ><i class="icon-print"></i> Export to PDF </a>
	</div>
</div>


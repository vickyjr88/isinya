<div class="span12" style="margin-left:-2px;">
	<div class="button-bar">
		<span class="buttons">
			<div class="btn-group">
				{{#user_can INVENTORY_VIEW}}
					<a data-toggle="dropdown" class="btn btn-primary btn-mini dropdown-toggle"> <i class="icon-file"></i> Reports <i class="icon-angle-down icon-on-right"></i> </a>
					<ul class="dropdown-menu pull-right dropdown-caret">
						<li>
							<a href="{{controller_base_url}}inventory_stock_levels" >Inventory Stock Levels</a>
						</li>
						<li>
							<a href="{{controller_base_url}}inventory_stock_by_category">Inventory Stock Levels by Category</a>
						</li>
						<li>
							<a href="{{controller_base_url}}inventory_stock_by_location">Inventory Stock Levels by Location</a>
						</li>
						<li>
							<a href="{{controller_base_url}}inventory_stock_by_supplier">Inventory Stock Levels by Supplier</a>
						</li>
						<li>
							<a href="{{controller_base_url}}inventory_reorder">Inventory Stock To Reorder</a>
						</li>
						<li>
							<a href="{{controller_base_url}}supplier_address_book">Supplier Address Book</a>
						</li>
						<li>
							<a href="{{controller_base_url}}pull_sheets">Pull Sheet Summary</a>
						</li>
					</ul>
				{{/user_can}}
			</div>
		</span>
	</div>
	<div class="row-fluid">
	<br clear="all" />
	<table class="table table-striped table-bordered table-hover table-condensed data-table bpmTopnTail" id="supply_address">
		<thead>
			<tr>
				<th class="center">Supplier code</th>
				<th>Supplier Name</th>
				<th>Contact Person</th>
				<th class="hidden-480">Order Email Address</th>
				<th class="hidden-480">Sales Email Address</th>
				<th>Mobile Phone</th>
				<th class="hidden-480">Business Phone</th>
			</tr>
		</thead>
		<tbody>
			{{#each suppliers}}
			<tr>
				<td><a class="ajax-modal" data-href="{{../component_base_url}}/suppliers/edit/{{supplier_id}}">{{supplier_code}}</a></td>
				<td>{{supplier_name}}</td>
				<td>{{supplier_contact_title}} {{supplier_contact_person}}</td>
				<td class="hidden-480">{{supplier_order_email}}</td>
				<td class="hidden-480">{{supplier_sales_email}}</td>
				<td>{{supplier_cellphone}}</td>
				<td class="hidden-480">{{supplier_business_phone}} ext. {{supplier_business_phone_ext}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
	</div>
	<div class="row-fluid button-bar-bottom">
		<!--<a href="{{controller_base_url}}" class="btn btn-small"><i class="icon-undo"></i> Go Back to Supplies</a>-->
		<a href="{{controller_base_url}}supplier_export_excel_address_book" class="btn btn-primary btn-small" ><i class="icon-save"></i> Export to Excel</a>
		<a href="{{current_url}}?format=pdf" class="btn btn-primary btn-small" ><i class="icon-print"></i> Export to PDF </a>
	</div>
</div>

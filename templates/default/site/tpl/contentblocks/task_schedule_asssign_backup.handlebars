<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3>Schedule Task</h3>
</div>
<div class="modal-body">
	<div class="row-fluid">
		
			<div class="accordion" id="assign-person-form">
				<div class="accordion-group">
					<div class="accordion-heading">
						<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#add-personnel"><i class="icon-plus-sign"></i> Add Personnel </a>
					</div>
					<div id="add-personnel" class="accordion-body collapse">
						<div class="accordion-inner">
							<form class="booking-form form-horizontal">
		
								 <div class="control-group">
							    	<label class="control-label" for="jobDescription" >Personnel</label>
								    <div class="controls">
								      <select id="selequipment">
									  	<option value="p1">Peter Oburu</option>
									  	<option value="p1">Onesmus Mwangima</option>
									  	<option value="p1">Ochieng Kogallo</option>
									  	<option value="p1">Victor Wekesa</option>
							  		</select>
								    </div>
								  </div>
								   <div class="control-group">
							    	<label class="control-label" for="jobDescription" >Time per day</label>
								    <div class="controls">
								      <span>
												<input type="text" autocomplete="off" id="booking-start-time">
											</span>
											<span class="dash">to</span>
											<span>
												<input type="text" autocomplete="off" id="booking-end-time">
											</span>
								    </div>
								  </div>
								  <div class="control-group">
							    	<label class="control-label" for="jobDescription" >Details</label>
								    <div class="controls">
								      <textarea id="booking-details"> </textarea>
								    </div>
								  </div>
							</form>
							<a class="btn btn-primary btn-small submit-form-ajax"  data-comment="true" data-form="modal-task-form">Save Personnel</a>
						</div>
					</div>
				</div>		
			</div>
			<div class="accordion" id="assign-equip-form">
				<div class="accordion-group">
					<div class="accordion-heading">
						<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#add-equipment"><i class="icon-plus-sign"></i> Add Equipment </a>
					</div>
					<div id="add-equipment" class="accordion-body collapse">
						<div class="accordion-inner">
							<form class="booking-form form-horizontal">
								 <div class="control-group">
							    	<label class="control-label" for="jobDescription" >Equipment</label>
								    <div class="controls">
								      <select id="select-quipment">
									  	<option value="p1">Lorry KAB123R</option>
									  	<option value="p1">Lorry KAB133S</option>
									  	<option value="p1">Lorry KAB125R</option>
									  	<option value="p1">Lorry KAB123G</option>
							  		</select>
								    </div>
								  </div>
								   <div class="control-group">
							    	<label class="control-label" for="jobDescription" >Time per day</label>
								    <div class="controls">
								      <span>
												<input type="text" autocomplete="off" id="booking-start-time">
											</span>
											<span class="dash">to</span>
											<span>
												<input type="text" autocomplete="off" id="booking-end-time">
											</span>
								    </div>
								  </div>
								  <div class="control-group">
							    	<label class="control-label" for="jobDescription" >Details</label>
								    <div class="controls">
								      <textarea id="booking-details"> </textarea>
								    </div>
								  </div>
							</form>
							<a class="btn btn-primary btn-small submit-form-ajax"  data-comment="true" data-form="modal-task-form">Save Equipment</a>
						</div>
					</div>
				</div>		
			</div>
			<table id='jobs-profile-list' class='table table-condensed table-bordered'>
		<thead>
			<tr>
				<th>Type</th>
				<th>Name</th>
				<th>Schedule</th>
			</tr>
		</thead>
		<tbody>
			<tr data-id="1">
				<td>Personnel</td>
				<td>Peter Oburu</td>
				<td>8:00am - 5:00pm</td>
			</tr>
			<tr data-id="2">
				<td>Personnel</td>
				<td>Onesmus</td>
				<td>8:00am - 5:00pm</td>
			</tr>
			<tr data-id="3">
				<td>Equipment</td>
				<td>Lorry KAB123R</td>
				<td>5:00pm - 6:00pm</td>
			</tr>
			<tr data-id="4">
				<td>Equipment</td>
				<td>Lorry KAB123R</td>
				<td>5:00pm - 6:00pm</td>
			</tr>
		</tbody>
	</table>
